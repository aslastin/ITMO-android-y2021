<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Line">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_style</item>
    </style>

    <style name="OpButton" parent="Button">
        <item name="android:backgroundTint">#FF007F</item>
    </style>

    <style name="ActionButton" parent="Button">
        <item name="android:padding">@dimen/actionButtonPadding</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:backgroundTint">#7F00FF</item>
    </style>

    <style name="EqualsButton" parent="Button">
        <item name="android:backgroundTint">#48C626</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="NumberButton" parent="Button">
        <item name="android:backgroundTint">#0080FF</item>
    </style>

</resources>
